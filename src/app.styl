/**
 *   项目全局样式
 */
blockquote, body, button, dd, dl, dt, fieldset, form, h1, h2, h3, h4, h5, h6, hr, input, legend, li, ol, p, pre, td, textarea, th, ul
  margin 0
  padding 0
  box-sizing border-box
button, input, select, textarea
  font-size 100%
h1, h2, h3, h4, h5, h6
  font-size 100%
address, cite, dfn, em, var
  font-style normal
code, kbd, pre, samp
  font-family courier new, courier, monospace
small
  font-size 12px
li
  list-style none
a
  text-decoration none
sup
  vertical-align text-top
sub
  vertical-align text-bottom
legend
  color #000
fieldset, img
  border 0
textarea
  resize none
img
  vertical-align middle
table
  border-collapse collapse
  border-spacing 0
html
  font 14px / 1.5 'sans-serif'
body
  color #333
i, var, em
  font-style normal
th
  font-size inherit
for i in 3px 5px 10px 15px 20px 25px 30px 35px 40px 50px
  body .ml{i}
    margin-left i
  body .mt{i}
    margin-top i
  body .mr{i}
    margin-right i
  body .mb{i}
    margin-bottom i
  body .pl{i}
    padding-left i
  body .pt{i}
    padding-top i
  body .pr{i}
    padding-right i
  body .pb{i}
    padding-bottom i
.jxkiconfont
  vertical-align middle
// 表单必填项
.required
  vertical-align middle
  color #E83928
  &:after
    content '*'
// 操作按钮
.link_btn
  color $theme-color
  cursor pointer
  vertical-align middle
.main-content
  background-color white
  padding 20px 15px
  border-radius 3px
  box-shadow 0 0 20px #dfdfdf
// 分页列表 操作按钮
.page-list-handler
  >a, >span, >label
    margin-left 8px
    vertical-align bottom
    &:first-child
      margin-left 0
// 分页大容器
.pagination-page
  position relative
  padding-bottom 90px
.clearfix
  :after
    content '\20'
    clear both
    height 0
    display block
    overflow hidden
// 通用表格样式
.ui-tbl-1
  border-left 1px solid #E8E8E8
  border-top 1px solid #E8E8E8
  border-right 1px solid #E8E8E8
  th
    background-color #FAFAFA
  th, td
    border-bottom 1px solid #E8E8E8
// 订单状态 文案样式
.order_status_0, .order_status_1, .order_status_2, .order_status_3, .order_status_4, .order_status_5
  position relative
  display inline-block
  padding-left 12px
  vertical-align middle
  &:before
    content ''
    width 5px
    height 5px
    border-radius 50%
    position absolute
    left 0
    top 9px
.order_status_0
  &:before
    background-color #f5212d
.order_status_1
  &:before
    background-color #faad15
.order_status_2
  &:before
    background-color #53c41a
.order_status_3
  &:before
    background-color #2284f3
.order_status_4
  &:before
    background-color #bfbfbf
.order_status_5
  &:before
    background-color #d12bdd
.Itemfrozen
  color red
.avatarUploader
  display inline-block
// 文件上传
.upload_btn_box
  width 104px
  height 104px
  display inline-block
  vertical-align middle
  margin-bottom 5px
.upload_ret_items
  display inline-block
  vertical-align middle
  width 104px
  height 104px
  border 1px solid #e4e4e4
  padding 8px
  position relative
  border-radius 4px
  margin-right 15px
  margin-bottom 5px
  &:first-child
    margin-left 0
  .upload_ret_remove
    position absolute
    right 0
    top 0
    display none
    color #666
    cursor pointer
    font-size 20px
    width 20px
    height 20px
    text-align center
    line-height 20px
    &:after
      content '×'
      position absolute
      right 0
      top 0
      width 100%
      height 100%
  .show-image
    height 100%
  img
    width 100%
    height 100%
  &:hover
    .upload_ret_remove
      display block