.card_box
  :global
    .ant-card-head
      padding: 0 15px
      min-height: 35px
      border-bottom: 0px
    .ant-card-head-title
      padding: 16px 13px
      font-size: 14px
      line-height: 18px
      position: relative
    .ant-card-head-title:after
      position: absolute
      height :14px
      top: 0
      left:0
      bottom: 0
      margin: auto 0
      border-left: 4px solid $theme-color
      z-index: 3
      content: ''
    .ant-card-body
      padding: 0 20px 20px 20px



.contents_box
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
  padding: 10px  
  position: relative
  display: none
  z-index :3
  text-align: left 
  &:before
    content: '';
    position: absolute
    width: 8.48528137px;
    height: 8.48528137px;
    background: transparent;
    border-style: solid;
    border-width: 4.24264069px;
    top:15px
    border-top-color: transparent
    border-right-color: transparent
    border-bottom-color: #fff
    border-left-color: #fff
    box-shadow: -2px -2px 5px rgba(0,0,0,0.06)
    transform: translateX(-50%) rotate(45deg);
    left: 0px
    transition:  all .3s;
.active
  display: inline-block
.has_Popover_content
  position: relative
  .props_box
    text-align: center
    position: absolute
    left: 55.5%
   
    