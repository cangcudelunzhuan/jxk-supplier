.card_box
  :global
    .ant-card-head
      padding: 0 15px
      min-height: 35px
      border-bottom: 0px
    .ant-card-head-title
      padding: 16px 13px
      font-size: 14px
      line-height: 18px
      position: relative
    .ant-card-head-title:after
      position: absolute
      height :14px
      top: 0
      left:0
      bottom: 0
      margin: auto 0
      border-left: 4px solid $theme-color
      z-index: 3
      content: ''
    .ant-card-body
      padding: 0 20px 20px 20px


.id_box
  position: relative
  .btn
    position: absolute
    top: 3px
    left:51%

.table_btn
  color: $theme-color
  margin-right: 10px
  cursor: pointer

.step_btn
  border-top:1px solid #f0f2f5
  padding-top: 30px
  text-align: center
  :global
    .ant-btn
      margin-left: 20px


.inline_box
  position :relative
  z-index:1
  .right_box
    position: absolute
    width: 50%
    left:52%
    z-index: 0
  .icon
    position: absolute
    top: 10px
    left:-14px 
    bottom: 0
    right: 0
    margin: 0 auto


.modal_top
  display: flex
  align-items: center
  justify-content: space-between
  margin-bottom: 20px
  .modal_top_right
    display: flex
    align-items: center
    flex-wrap: nowrap
    p
     width: 50px
     line-height: 14px
     font-size: 14px
     margin-bottom: 0
     text-align: center
    :global
      .ant-input
        margin-left: 10px
        width: 80px
      .ant-form-item
        margin-bottom: 0


.add_extra
  text-align: center
.tableInput
  position: relative
  :global
    .ant-form-explain
      position: absolute;
      width: 200px
      // right: -95px;
      // top: 10px;


.label_box
  float:left
  margin-top: 10px
.contentInner
  :global
    .ant-form-item
      margin-bottom: 0


.contents_box
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
  padding: 10px  
  position: relative
  display: none
  z-index :3
  text-align: left 
  &:before
    content: '';
    position: absolute
    width: 8.48528137px;
    height: 8.48528137px;
    background: transparent;
    border-style: solid;
    border-width: 4.24264069px;
    top:15px
    border-top-color: transparent
    border-right-color: transparent
    border-bottom-color: #fff
    border-left-color: #fff
    box-shadow: -2px -2px 5px rgba(0,0,0,0.06)
    transform: translateX(-50%) rotate(45deg);
    left: 0px
    transition:  all .3s;
.active
  display: inline-block
.has_Popover_content
  position: relative
  .props_box
    text-align: center
    position: absolute
    left: 36.5%
   


