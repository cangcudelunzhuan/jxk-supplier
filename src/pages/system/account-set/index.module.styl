.headTop
  width:78px
  height:78px
  background:#ff6700
  border-radius: 50%
  position: relative
  img
    width:100%
    height:100%
    border-radius: 50%
    display: block
  &:hover:after
    content:''
    opacity: .4
    position: absolute
    background:#000
    width:78px
    height:78px
    left 0
    top:0
    color:#fff
    border-radius: 50%
    padding-top:10px
  &:hover:before
    content:'修改头像'
    position: absolute
    width: 100%
    text-align: center
    left :0
    bottom: 10px
    z-index :1
    color:#fff
    opacity: .8
    font-size: 12px
